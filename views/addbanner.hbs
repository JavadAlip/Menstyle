        <label for="floatingInput">Title</label>
      </div>
       {{!-- <p class="text-danger  text-center"></p> --}}

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="subtitle" placeholder="brand">
