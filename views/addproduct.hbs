<div class="form control d-flex justify-content-center align-items-center flex-column">
  <h1>Add Product</h1>
  <div style="width: 30rem; height: 50rem;">
    <form action="/product/addproduct" method="post" enctype="multipart/form-data" name="submission" onsubmit="return productDetails()" oninput="clearform()">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="productname" placeholder="product name">
        <label for="floatingInput">Product Name</label>
      </div>
       <p class="text-danger  text-center"></p>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="brand" placeholder="brand">
        <label for="floatingInput">Brand</label>
      </div>
       <p class="text-danger  text-center"></p>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="price" placeholder="price">
        <label for="floatingInput">Price</label>
      </div>
       <p class="text-danger  text-center"></p>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="stock" placeholder="stock">
        <label for="floatingInput">Stock</label>
      </div>
       <p class="text-danger  text-center"></p>

      <div class="form-group">
        <label for="tech" class="col-sm-3 control-label">Category</label>
        <div class="col-md-5">
          <select class="form-control" name="category">
          {{#each categorynew}}
            <option >{{this.category}}</option>
       
          {{/each}}
          </select>
        </div>
      </div>
       <p class="text-danger  text-center"></p>



      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingPassword" name="discription" placeholder="Description">
        <label for="floatingPassword">Description</label>
      </div>
       <p class="text-danger  text-center"></p>


      <div class="form-floating">

      </div>
      <input type="file" multiple class="form-control" id="floatingInput" name="Productimage"  placeholder="add photo" required>

      <div class="pt-5 mb-4 ">
        <button class="btn btn-dark btn-lg btn-block" type="submit">Update</button>
      </div>
    </form>
  </div>
</div>
<script src="/javascripts/productDetails.js"></script>