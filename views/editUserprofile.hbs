<div class="form control d-flex justify-content-center align-items-center flex-column">
  <h1>EDIT USER PROFILE</h1>
  <div style="width: 30rem; height: 50rem;">
    <form action="/userProfile/{{editprofiledata._id}}" method="post" name="submission">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="Username" name="Username" value="{{editprofiledata.Username}}">
        <label for="floatingInput">Username</label>
      </div>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="Mobilenumber" name="Mobilenumber"
          value="{{editprofiledata.Mobilenumber}}">
        <label for="floatingInput">Mobile Number</label>
      </div>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="Email" name="Email" value="{{editprofiledata.Email}}">
        <label for="floatingInput">Email</label>
      </div>

      <div class="pt-5 mb-4 ">
        <td> <button type="submit" class="btn btn-primary">UPDATE</button></td>
      </div>
    </form>
  </div>
</div>